<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.adachina.commons</groupId>
	<artifactId>adachina-commons</artifactId>
	<version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

	<modules>

		<module>ada-common</module>
		<module>ada-job</module>
		<module>ada-web</module>
		<module>ada-sms</module>

	</modules>

    <properties>

        <java.version>1.8</java.version>

        <!--ada-commons-->
        <ada-common.version>0.0.1-SNAPSHOT</ada-common.version>
        <ada-job.version>0.0.1-SNAPSHOT</ada-job.version>
        <ada-web.version>0.0.1-SNAPSHOT</ada-web.version>
        <ada-sms.version>0.0.1-SNAPSHOT</ada-sms.version>

        <!--apache-->
        <commons-lang3.version>3.8.1</commons-lang3.version>
        <commons-io.version>1.3.2</commons-io.version>
        <log4j-api.version>2.11.2</log4j-api.version>
        <log4j-slf4j-impl.version>2.10.0</log4j-slf4j-impl.version>
        <poi.version>4.0.1</poi.version>
        <github-pagehelper.version>5.0.3</github-pagehelper.version>
        <spring-web.version>5.0.4.RELEASE</spring-web.version>

        <!--spring-boot-starter-->
        <spring-boot-starter-web.version>2.0.8.RELEASE</spring-boot-starter-web.version>
        <spring-boot-starter-test.version>2.0.8.RELEASE</spring-boot-starter-test.version>
        <spring-boot-starter-actuator.version>2.0.8.RELEASE</spring-boot-starter-actuator.version>
        <spring-cloud-starter-consul-discovery.version>2.1.0.RELEASE</spring-cloud-starter-consul-discovery.version>
        <spring-boot-starter-jdbc.version>2.0.8.RELEASE</spring-boot-starter-jdbc.version>
        <druid-spring-boot-starter.version>1.1.14</druid-spring-boot-starter.version>
        <spring-webmvc.version>5.1.5.RELEASE</spring-webmvc.version>
        <spring-data-redis.version>2.1.5.RELEASE</spring-data-redis.version>
        <spring-cloud-context.version>2.1.0.RELEASE</spring-cloud-context.version>
        <spring-cloud-commons.version>2.1.0.RELEASE</spring-cloud-commons.version>

        <jjwt.version>0.7.0</jjwt.version>
        <joda-time.version>2.9.5</joda-time.version>
        <javax.servlet-api.version>3.1.0</javax.servlet-api.version>

        <fastjson.version>1.2.31</fastjson.version>
        <esotericsoftware.kryo.version>2.10</esotericsoftware.kryo.version>
        <commons-beanutils.version>1.9.3</commons-beanutils.version>
        <okhttp.version>3.14.0</okhttp.version>
        <javassist.version>3.22.0-GA</javassist.version>
        <lombok.version>1.18.6</lombok.version>

        <tk.mybatis.version>3.4.0</tk.mybatis.version>

        <mksapi-jar.version>4.10.9049</mksapi-jar.version>

        <apollo-client.version>1.2.0</apollo-client.version>
        <mysql-connector-java.version>8.0.15</mysql-connector-java.version>
        <mapper-spring-boot-starter.version>1.1.2</mapper-spring-boot-starter.version>
        <pagehelper-spring-boot-starter.version>1.2.10</pagehelper-spring-boot-starter.version>
        <druid.version>1.1.14</druid.version>
        <tk.mybatis.mapper.version>4.1.2</tk.mybatis.mapper.version>

    </properties>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.0.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19.1</version>
                <configuration>
                </configuration>
            </plugin>
            <plugin>
                <groupId>pl.project13.maven</groupId>
                <artifactId>git-commit-id-plugin</artifactId>
                <version>2.2.4</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>revision</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <!--日期格式;默认值:dd.MM.yyyy '@' HH:mm:ss z;-->
                    <dateFormat>yyyyMMddHHmmss</dateFormat>
                    <!-- ".git"文件路径;默认值:${project.basedir}/.git; -->
                    <dotGitDirectory>${project.basedir}/.git</dotGitDirectory>
                    <!--是否生成"git.properties"文件;默认值:false;-->
                    <generateGitPropertiesFile>true</generateGitPropertiesFile>
                    <!--指定"git.properties"文件的存放路径(相对于${project.basedir}的一个路径);-->
                    <generateGitPropertiesFilename>${project.build.outputDirectory}/conf/git.properties</generateGitPropertiesFilename>

                    <!--git描述配置,可选;由JGit提供实现;-->
                    <gitDescribe>
                        <!--提交操作未发现tag时,仅打印提交操作ID,-->
                        <always>false</always>
                        <!--构建触发时,代码有修改时(即"dirty state"),添加指定后缀;默认值:"";-->
                        <dirty>-dirty</dirty>
                        <forceLongFormat>false</forceLongFormat>
                    </gitDescribe>
                </configuration>
            </plugin>
        </plugins>
    </build>


    <distributionManagement>
        <repository>
            <id>maven-releases</id>
            <name>releases</name>
            <url>http://52.82.67.68:8081/repository/maven-releases/</url>
            <uniqueVersion>true</uniqueVersion>
        </repository>
        <snapshotRepository>
            <id>maven-snapshots</id>
            <name>snapshots</name>
            <url>http://52.82.67.68:8081/repository/maven-snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <pluginRepositories>
        <pluginRepository>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <id>ada-repo</id>
            <name>ada nexus</name>
            <url>http://maven.aliyun.com/nexus/content/groups/public</url>
        </pluginRepository>
        <pluginRepository>
            <releases>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>central</id>
            <name>Central Repository</name>
            <url>https://repo.maven.apache.org/maven2</url>
        </pluginRepository>
    </pluginRepositories>

</project>
